# EditorConfig ensures a consistent formatting style across editors and IDEs.
#
# See https://editorconfig.org/ for more information.

# This is the top-most config file.
root = true

[*]
# Encode all files using UTF-8.
charset = utf-8

# Use LF as the line ending character.
end_of_line = lf

# Ensure every text files ends with a newline character.
insert_final_newline = true

# Remove useless whitespace at the end of lines.
trim_trailing_whitespace = true
