<%= bootstrap_form_for @expenditure_article do |f| %>
  <%= f.alert_message 'Vă rog să rezolvați erorile de mai jos:' %>

  <div class="col-12 col-sm-8 col-md-6 col-lg-4">
    <%= f.text_field :code %>
    <%= f.text_field :name %>
    <%= f.text_field :expenditure_category_code %>
    <%= f.text_field :commitment_category_code %>

    <%= f.submit f.object.persisted? ? 'Salvează' : 'Adaugă' %>
  </div>
<% end %>
