<h1>Utilizatori</h1>

<p><%= link_to 'Înapoi la pagina principală', root_path %></p>
<p><%= link_to 'Adaugă un utilizator nou', new_user_path %></p>

<% if flash.notice %>
  <p class="alert alert-primary">
    <%= flash.notice %>
  </p>
<% end %>

<% if flash.alert %>
  <p class="alert alert-danger">
    <%= flash.alert %>
  </p>
<% end %>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Prenume</th>
      <th scope="col">Nume de familie</th>
      <th scope="col">E-mail</th>
      <th scope="col">Rol</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
