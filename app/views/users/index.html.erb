<% content_for :title, 'Utilizatori' %>

<h1>Utilizatori</h1>

<% can_modify_users = current_user.supervisor? || current_user.admin? %>

<p><%= link_to 'Înapoi la pagina principală', root_path, class: 'btn btn-light' %></p>
<p><%= link_to 'Adaugă un utilizator nou', new_user_path, class: 'btn btn-primary' %></p>

<%= render partial: 'flashes' %>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Prenume</th>
      <th scope="col">Nume de familie</th>
      <th scope="col">E-mail</th>
      <th scope="col">Rol</th>
      <th scope="col">Acțiuni</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= t "roles.#{user.role}" %></td>
        <td>
          <% if can_modify_users && (!current_user.supervisor? || !user.admin?) %>
            <%= link_to 'Editează',
                        edit_user_path(user.id),
                        target: '_top',
                        class: 'ms-1 btn btn-warning' %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
